rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    // needed by UserMetadataRepository
    match /metadata/{uid} {
      allow read: if request.auth.uid == uid;
    }
  }
}